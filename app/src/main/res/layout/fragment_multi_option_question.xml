<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MultiOptionQuestion">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:src="@drawable/question_image"/>
    <com.airbnb.lottie.LottieAnimationView
        app:lottie_autoPlay="true"
        app:lottie_fileName="question_test.json"
        app:lottie_loop="true"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp" />
    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:background="@drawable/shadow_layout"
        android:layout_marginTop="210dp">

        <TextView
            android:id="@+id/question_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            tools:text= "سؤال 1/2"/>

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginTop="17dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:text= "قيمتها تكون ثابته ولا تستطيع تغييرها؟"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <RadioGroup
                android:id="@+id/answer"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                tools:ignore="UselessParent">

                <RadioButton
                    android:id="@+id/option_one"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    tools:text="var"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/answer_style"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:scaleX="0.9"
                    android:scaleY="0.9" />
                <RadioButton
                    android:id="@+id/option_two"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    tools:text="var"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/answer_style"
                    android:layout_marginBottom="10dp"
                    android:textSize="14sp"
                    android:layout_marginEnd="10dp"
                    android:scaleX="0.9"
                    android:scaleY="0.9" />
                <RadioButton
                    android:id="@+id/option_three"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    tools:text="var"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/answer_style"
                    android:textSize="14sp"
                    android:layout_marginEnd="10dp"
                    android:scaleX="0.9"
                    android:scaleY="0.9" />
            </RadioGroup>
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/next_button"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="300dp"
        android:src="@drawable/next_button"
        android:visibility="gone"
        android:layout_marginStart="300dp" />
    <ImageView
        android:id="@+id/done_button"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="300dp"
        android:src="@drawable/done_button"
        android:layout_marginStart="300dp"
        android:visibility="gone"/>
</RelativeLayout>